<%= form_for(@task, method: :post, remote: true) do |f| %>
<%= f.label "Discribe the task"%>
<%= f.text_field :comments, id: "task-comments" %>
<br />
<%= f.label "Project" %>
<%= f.collection_select :project_id, Project.order(:name), :id, :name,
                        include_blank: true %>
<br />
<%= f.label "Date (if blank date will be today)" %>
<%= f.date_field :day %>
<br  />
<%= f.submit "Insert", class: 'btn-submit' %>
<% end %>
