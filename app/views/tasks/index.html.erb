<% provide(:title, "Your Tasks") %>
<div class="container">
  <div class="row">
<h1>Welcome <%= current_user.email_or_user_name %></h1>
</div>
<div class="row">
<br />
Enter your tasks for the day:
</div>
<div class="row">
<%= button_tag "Add Task", onclick: "showForm()", class: "btn btn-primary" %>
</div>
<div class="row">
<div id="new-task-form">
  <div class="container border rounded new-task-form">
    <%= render 'new'  %>
  </div>
</div>

</div>
<div class="row">



<table class="table table-hover" id="current-tasks">
  <thead class="thead-dark">
    <tr>
      <th>
        Date:
        </th>
        <th>
          Project:
          </th>
          <th>
          Comments:
            </th>
            <th>
              Total Time (minutes):
              </th>
              <th>
                Edit:
                </th>
      </tr>
      </thead>

  <div id="current-tasks">
    <%= render partial: 'show_list', locals: {tasks: @tasks, projects: @projects} %>
  </div>

</table>


<div class="row justify-content-sm-center">
<%= will_paginate(@tasks, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
</div>

<div class="row">
<%= link_to "New Project", new_project_url, class: "btn btn-primary" %>
</div>
<br />
<div class="row">
<%= link_to "New Subtask", new_subproject_url, class: "btn btn-primary" %>
</div>
</div>
