<% provide(:title, "Your Tasks") %>
<div class="container">
  <div class="row">
<h1>Welcome <%= current_user.email_or_user_name %></h1>
<% #Total time <%= total_time_spent %>
</div>
<div class="row">
<br />
Enter your tasks for the day:
</div>
<div class="row">

<%= button_tag "New Task", onclick: "showForm()", class: "btn btn-primary" %>
</div>
<div class="row">
    <div class="container-fluid" id="new_task_form">
<div id="new-task-form">
  <div class="container border rounded new-task-form">
    <%= render 'new'  %>
  </div>
</div>
</div>
</div>
<div class="shove">
<div class="row">



  <table class="table table-hover" id="current-tasks">
    <thead class="thead-dark">
      <tr>
        <th>
          <%= sorter "day", "Date:" %>
          </th>
          <th>
             Project:
            </th>
            <th>
            Comments:
              </th>
              <th>
              <%= sorter "time", "Total Time (minutes):"%>
                </th>
                <th>
                 Edit:
                  </th>
        </tr>
        </thead>

    <%= render partial: 'show_list', locals: {tasks: @tasks, projects: @projects} %>


</table>


<div class="row justify-content-sm-center">
<%= will_paginate(@tasks, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
</div>
</div>
</div>
